    if (windowWidth &gt;= 600) {
      return heatmap_width(12);
    } else if (windowWidth &gt;= 400) {
      return heatmap_width(9);
    } else {
      return heatmap_width(6);
    }
  }

  var baseTextColor = &#39;hsl(30, 10%, 65%)&#39;;

  option = {
    textStyle: { color: baseTextColor },
    title: {
        top: 0,
        left: &#39;center&#39;,
        text: &#39;博客产量&#39;,
        textStyle: { color: baseTextColor }
    },
    tooltip: {
      formatter: function (p) {
        const post = dataMap.get(p.data[0]);
        return post.title + &#39; | &#39; + post.wordCount + &#39; 千字&#39;;
      },
      textStyle: { color: baseTextColor }
    },
    visualMap: {
        min: 0,
        max: 10,
        type: &#39;piecewise&#39;,
        orient: &#39;horizontal&#39;,
        left: &#39;center&#39;,
        top: 30,
        inRange: {
          
          color: [&#39;#7aa8744c&#39;, &#39;#7AA874&#39; ]
        },
        splitNumber: 4,
        text: [&#39;千字&#39;, &#39;&#39;],
        showLabel: true,
        itemGap: 20,
        textStyle: { color: baseTextColor }
    },
    calendar: {
        top: 80,
        left: 20,
        right: 4,
        cellSize: [&#39;auto&#39;, 12],
        range: getRangeArr(),
        itemStyle: {
            color: &#39;#F1F1F1&#39;,
            borderWidth: 2.5,
            borderColor: &#39;#fff&#39;,
        },
        yearLabel: { show: false, color: baseTextColor },
        monthLabel: { color: baseTextColor },
        dayLabel: { color: baseTextColor },
        splitLine: {
          lineStyle: {
            color: &#39;rgba(0, 0, 0, 0.0)&#39;,
          }
        }
    },
    series: {
        type: &#39;heatmap&#39;,
        coordinateSystem: &#39;calendar&#39;,
        data: data,
    }
  };
  myChart.setOption(option);
  myChart.on(&#39;click&#39;, function(params) {
    if (params.componentType === &#39;series&#39;) {
      const post = dataMap.get(params.data[0]);
      const link = window.location.origin + post.link;
      window.open(link, &#39;_blank&#39;).focus();
    }
});
&lt;/script&gt;
</description>
